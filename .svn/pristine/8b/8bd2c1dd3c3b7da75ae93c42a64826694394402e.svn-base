<template>
  <div class="user_main">
    <mt-header fixed :title="title">
        <a @click='back' slot="left">
            <mt-button icon="back"></mt-button>
        </a>
    </mt-header>
    <ul class="infor_list sec_number">
            <li>
                <input  maxlength="11" placeholder="请输入手机号" type="number" v-model="userData.mobile">
            </li>
            <li class="forget_txt">
                <input id="yzm" placeholder="验证码" type="text" v-model="userData.validCode">
            <button class="forget_yzm"  @click="getCode()" :disabled='disabled' :class="{disabled:disabled}">
                {{isNaN(codetext)?codetext:codetext+'秒'}}
            </button>

            </li>

            <li>
                <input  placeholder="密码" type="password" v-model="userData.password">
            </li>

            <!-- <li style="display: block;">
                <input placeholder="机构代码" type="text" >
            </li> -->

            <li style="display: block;">
                <input placeholder="邀请码" type="text" v-model="userData.inviteCode" :disabled='codedisabled'>
            </li>

            <li style="margin-top: 20px" >
                <button class="confirm button_bag" id="register" @click="register()">立即注册</button>
            </li>
        </ul>
  </div>
</template>

<script type="">
import { Toast } from 'mint-ui';

export default {
  name:"register",
  data() {
    return {
        title:'注册账号',
        userData:{//用户资料
            mobile:'',//手机号
            password:'',//密码
            inviteCode:'',//推荐人id 邀请码
            validCode:'',//短信验证码
            terminal:''//设备类型
        },
        disabled:false, //验证码按钮状态
        timer:null,//验证码定时器
        codetext:'获取验证码',//验证码文字信息
        inviteCode:this.$route.query.inviteCode,//邀请码
        codedisabled:false

    }
  },
  components: {

  },

  created () {
      console.log(this.inviteCode);
      if (this.inviteCode) {
        this.userData.inviteCode=this.inviteCode
        this.codedisabled=true
      }
    var u = navigator.userAgent;
    if (u.indexOf('Android') > -1 || u.indexOf('Linux') > -1) { //安卓手机
        this.userData.terminal=1
    } else if (u.indexOf('iPhone') > -1) { //苹果手机
        this.userData.terminal=2
    } else { //wap 
        this.userData.terminal=3
    }
  },
  methods: {
      getCode(){//获取短信验证码
        if (!this.userData.mobile) {
            Toast('请输入手机号码')
            return
        }
            this.disabled=true
            this.codetext=60
            this.timer=setInterval(()=>{
                if(this.codetext > 0 && this.codetext <= 60 > 0 && this.codetext <= 60){
                    this.codetext--
                }else{
                    this.disabled=false
                    this.codetext='获取验证码'
                    clearInterval(this.timer)
                    this.timer=null
                }
            },1000)
        this.$axios.get('/api/sms/validate_code/reg_'+this.userData.mobile).then(res=>{
            if (res.data.errorCode==0) {
                    Toast('发送成功')
                }else{
                    Toast(res.data.errorMsg)
                }
        }).catch(err=>{

        })

      },
      register(){//注册
            if (!this.userData.mobile) {
            Toast('请输入手机号码')
            return
        }
            if (!this.userData.password) {
            Toast('请输入密码')
            return
        }
        if (!this.userData.validCode) {
            Toast('请输入短信验证码')
            return
        }
            this.$axios({
                url:'/api/user/register',
                method:'post',
                data:this.userData,
                headers:{
                    'Content-Type': 'application/json;charset=UTF-8'
                }
            }).then(res=>{
                console.log(res)
                if (res.data.errorCode==0) {
                    Toast('注册成功')
                    this.$router.push('/');//跳转到登录前页面
                     this.$cookie.set("_auth",res.data.data.cookie)
                }else{
                    Toast(res.data.errorMsg)
                }
            }).catch(err=>{
                console.log(err)
            })
      }
  }
}
</script>

